<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
         "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
         "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="uk.ac.cardiff.model.Event" table="entry" dynamic-update="true" dynamic-insert="false">

	<id name="persistantId" column="persistantId" type="long"
			unsaved-value="null">
			<generator class="native" >
				<param name="sequence">hib_entity_seq</param>
    		</generator>
	</id>

 	<property name="eventTime" type="org.joda.time.contrib.hibernate.PersistentDateTime" update="true" insert="true" column="dateTime"  not-null="false" index="dt_index"/>
	<property name="requestHost" type="string" update="true" insert="true"	column="requestHost"  not-null="false" index="requesthost_index" />
	<property name="serverHost" type="string" update="true" insert="true"	column="serverHost"  not-null="false" />

	<joined-subclass name="uk.ac.cardiff.model.AuthenticationEntry"  table="authenticationEntry">
      		<key column="id"/>
      <property name="authNMethod" column="authNMethod" type="string" />


      	<joined-subclass name="uk.ac.cardiff.model.ShibbolethEntry"  table="shibbolethEntry">
          	 <key column="id"/>

      		<property name="requestPath" column="requestPath" type="string" />
      		<property name="requestId" column="requestID" type="string" />
      		<property name="messageProfileId" column="messageProfileId" type="string" />
      		<property name="responseBinding" column="responseBinding" type="string" />
      		<property name="requestBinding" column="requestBinding" type="string" />
      		<property name="principleName" column="principleName" type="string" index="principalname_index" />
			<property name="releasedAttributes" column="releasedAttributes" type="uk.ac.cardiff.model.hibernate.types.CommaDelimStringToListUserType" />
			<property name="assertionId" column="assertionId" type="uk.ac.cardiff.model.hibernate.types.CommaDelimStringToListUserType" />
			<property name="nameIdentifier" column="nameIdentifier" type="string" />
			<property name="responseId" column="responseId" type="string" />
            <property name="hashCode" column="hashCode" type="integer" index="hashcode_index"/>
    	</joined-subclass>

    </joined-subclass>


	</class>


</hibernate-mapping>
