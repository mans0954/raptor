<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jaxws="http://cxf.apache.org/jaxws"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
	http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">


	<bean id="endpointRegistry" class="uk.ac.cardiff.raptor.registry.EndpointRegistry">
		<property name ="endpoints">
			<list>
				<bean id="cardiffRaptorMUA" class="uk.ac.cardiff.raptor.registry.Endpoint">
					<property name="serviceEndpoint"><value>https://ipower.insrv.cf.ac.uk:8443/MUA/MultiUnitAggregator</value></property>
					<property name="pushPolicy"><ref bean="genericPushPolicy"></ref></property>
					<!--<property name="attributeFilterPolicy"><ref bean="removePrincipleFilterPolicy"></ref></property>-->
                </bean>
			</list>
		</property>
	</bean>

	<!--  policy for release of entries to the UA -->

	<bean id="genericPushPolicy" class="uk.ac.cardiff.raptor.remoting.policy.PushPolicy">
		<property name="pushOnOrAfterNoEntries"><value>10</value></property>
	</bean>

	<!-- Attribute filter policies -->

	<bean id="removePrincipleFilterPolicy" class="uk.ac.cardiff.raptor.attribute.filtering.AttributeFilterPolicy">
		<property name="policyName"><value>removePrincipleName</value></property>
		<property name="attributeRules">
		<list>
			<bean class="uk.ac.cardiff.raptor.attribute.filtering.AttributeRule">
				<property name="attributeID"><value>requestHost</value></property>
				<property name="denyValueRule">
					<bean class="uk.ac.cardiff.raptor.attribute.filtering.match.MatchRule">
						<property name="enabled"><value>true</value></property>
					</bean>
				</property>
			</bean>
		</list>
		</property>
	</bean>


</beans>