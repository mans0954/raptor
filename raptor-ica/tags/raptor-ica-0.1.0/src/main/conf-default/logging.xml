<?xml version="1.0" encoding="UTF-8"?>

<configuration>

   <property name="LOG_HOME" value="/opt/raptor/ica/logs" />

  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>${LOG_HOME}/raptor-ica-process.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${USER_HOME}/raptor-ica-process-%d{yyyy-MM-dd}.log</FileNamePattern>
    </rollingPolicy>
    <encoder>
      <pattern>%5p %d \(%C{3}:%L\) ---&gt; %m%n</pattern>
    </encoder>
  </appender>

  <logger name="org.springframework" level="ERROR">
    <appender-ref ref="FILE"/>
  </logger>

  <logger name="uk.ac.cardiff" level="INFO">
    <appender-ref ref="FILE"/>
  </logger>

  <logger name="org.mortbay" level="INFO">
    <appender-ref ref="FILE"/>
  </logger>

</configuration>