<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxws="http://cxf.apache.org/jaxws"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
	http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">


	<!-- HIBERNATE DAO -->
	<bean id="muaSessionFactory"
		class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource">
			<ref local="muac3p0DataSource" />
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect"> org.hibernate.dialect.PostgreSQLDialect</prop> <!-- database type -->
				<prop key="hibernate.show_sql">false</prop>  <!-- outputs the SQL queries used to the standard logger -->
				<prop key="hibernate.hbm2ddl.auto">update</prop> <!-- update changes the db if mapping changes, creates the db if none exists,
					in production do not use any of these -->
				<!-- Generate hibernate statistics
				<prop key="hibernate.generate_statistics">true</prop> -->
			</props>
		</property>
		<!-- OR mapping files. -->
		<property name="mappingResources">
			<list>
				<value>uk/ac/cardiff/model/event.hbm.xml</value>
			</list>
		</property>
	</bean>

	<!-- allows MBEAN stats pass out

	<bean id="jmxExporter" class="org.springframework.jmx.export.MBeanExporter">
		<property name="beans">
			<map>
				<entry key="Hibernate:name=statistics">
					<ref local="statisticsBean" />
				</entry>
			</map>
		</property>
	</bean>


	<bean id="statisticsBean" class="org.hibernate.jmx.StatisticsService">
		<property name="statisticsEnabled">
			<value>true</value>
		</property>
		<property name="sessionFactory">
			<ref local="muaSessionFactory" />
		</property>
	</bean>
	-->

	<bean id="muac3p0DataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource"
        destroy-method="close">
        <property name="driverClass">
            <value>org.postgresql.Driver</value>
        </property>
        <property name="jdbcUrl">
            <value>jdbc:postgresql://localhost/mua</value>
        </property>
        <property name="user">
            <value>postgres</value>
        </property>
        <property name="password">
            <value></value>
        </property>
        <property name="properties">
            <props>
                <prop key="c3p0.acquire_increment">5</prop>
                <prop key="c3p0.idle_test_period">100</prop>
                <prop key="c3p0.max_size">100</prop>
                <prop key="c3p0.max_statements">0</prop>
                <prop key="c3p0.min_size">10</prop>
                <prop key="user">postgres</prop>
                <prop key="password"></prop>
            </props>
        </property>
    </bean>


	<bean name="dataConnectionImpl" class="uk.ac.cardiff.raptormua.dao.MUADataConnectionImpl">
		<property name="sessionFactory" ref="muaSessionFactory" />
	</bean>


</beans>