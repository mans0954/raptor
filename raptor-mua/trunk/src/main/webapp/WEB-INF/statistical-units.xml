	<!-- test SQL where filters , follows subset of SQL-99 spec, but too verbose-->

	<bean id="testWhere" class="uk.ac.cardiff.model.sql.SQLWhere">
		<property name="booleanExpression">
			<bean class="uk.ac.cardiff.model.sql.BooleanExpression">
				<property name="booleanTerm">
					<bean class="uk.ac.cardiff.model.sql.BooleanTerm">
						<property name="booleanFactor">
							<bean class="uk.ac.cardiff.model.sql.BooleanFactor">
								<property name="booleanTest">
									<bean class="uk.ac.cardiff.model.sql.BooleanTest">
									 	<property name="booleanPrimary">
									 		<bean class="uk.ac.cardiff.model.sql.BooleanPrimary">
									 			<property name="predicate">
									 				<bean class="uk.ac.cardiff.model.sql.Predicate">
									 					<property name="comparisonPredicate">
									 						<bean class="uk.ac.cardiff.model.sql.ComparisonPredicate">
									 							<property name="compOp" value="EQUAL"/>
									 							<property name="fieldName" value="requestHost"/>
									 							<property name="value" value="https://sdauth.sciencedirect.com/"/>
									 						</bean>
									 					</property>
									 				</bean>
									 			</property>
									 		</bean>
									 	</property>
									</bean>
								</property>
							</bean>
						</property>
					</bean>
				</property>
			</bean>
		</property>

	</bean>



