<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


        <!--  the attribute association engine -->
    <bean id="attributeAssociationEngine" class="uk.ac.cardiff.raptor.event.expansion.AttributeAssociationEngine">
        <property name="attributeAssociationDefinition"><ref bean="attributeAssociationDefinition"></ref></property>
        <property name="dataConnector"><ref bean="ldapDataConnector"/></property>
    </bean>

    <!-- data connector -->
    <bean id="ldapDataConnector" class="uk.ac.cardiff.raptor.event.expansion.connector.LdapDataConnector">
        <constructor-arg index="0"><value>zidman12.cf.ac.uk</value></constructor-arg>
         <constructor-arg index="1"><value>o=people</value></constructor-arg>
         <constructor-arg index="2"><value>false</value></constructor-arg>
         <constructor-arg index="3"><value>10</value></constructor-arg>
         <constructor-arg index="4"><value>10</value></constructor-arg>
         <property name="principal"><value>cn=srvreg1,o=users</value></property>
         <property name="principalCredential"><value>1hk27be</value></property>
         <property name="cacheResults"><value>false</value></property>
    </bean>

    <!-- Properties to set -->
    <bean id="attributeAssociationDefinition" class="uk.ac.cardiff.raptor.event.expansion.AttributeAssociationDefinition">
        <property name="subjectPrincipalField"><value>principalName</value></property>
    </bean>


</beans>