        <property name="ascending"><value>true</value></property>
    </bean>

    <bean id="cut" class = "uk.ac.cardiff.raptormua.engine.statistics.processor.CutRowsPostProcessor">
        <property name="numberOfRowsToKeep"><value>5</value></property>
