	<!--  Support statistical workflows -->
	
	<bean id="percentagePost" class = "uk.ac.cardiff.raptormua.engine.statistics.processor.PercentagePostProcessor">
    </bean>
    
    <bean id="groupNameSort" class = "uk.ac.cardiff.raptormua.engine.statistics.processor.SortGroupsAlphabeticallyPostProcessor">
    </bean>

	<bean id="SamlMetadataNameFormatter" class = "uk.ac.cardiff.raptormua.engine.statistics.processor.SamlMetadataNameFormatter">
		<constructor-arg index="0"><value>/opt/shibboleth-idp/metadata/ukfederation-metadata.xml</value></constructor-arg>
	</bean>

	<bean id="sortDsc" class = "uk.ac.cardiff.raptormua.engine.statistics.processor.RowSortPostProcessor">
        <property name="ascending"><value>false</value></property>
    </bean>

